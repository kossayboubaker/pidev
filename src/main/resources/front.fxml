<AnchorPane prefHeight="590.0" prefWidth="920.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Front">
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
