      </StackPane>
      <!-- Logo -->
      <ImageView fitHeight="110.0" fitWidth="180.0" layoutX="22.0" layoutY="-29.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo.jpg.png" />
         </image>
      </ImageView>
      <!-- Menu Buttons -->
      <MenuButton fx:id="cataClient" layoutX="239.0" layoutY="27.0" prefHeight="26.0" prefWidth="156.0" styleClass="sous-button" stylesheets="@style.css" text="Catégorie &amp;Films">
