            <MenuItem onAction="#ButtonClickCinema" styleClass="sous-button2" text="Cinema" />
         </items>
      </MenuButton>
      <MenuButton fx:id="reservationFrontbuttonmenu" layoutX="525.0" layoutY="26.0" prefHeight="26.0" prefWidth="119.0" styleClass="sous-button" stylesheets="@style.css" text="Réservation">
         <items>
            <MenuItem styleClass="menu-item" text="Option 1" />
            <MenuItem styleClass="menu-item" text="Option 2" />
         </items>
      </MenuButton>
      <MenuButton fx:id="MarketClient" layoutX="653.0" layoutY="25.0" prefHeight="26.0" prefWidth="149.0" styleClass="sous-button" stylesheets="@style.css" text="MarketPlace">
