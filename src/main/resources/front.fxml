            <MenuItem onAction="#ReserverClient" styleClass="menu-item" text=" Réservation maintenant " />
         </items>
      </MenuButton>
      <MenuButton layoutX="887.0" layoutY="21.0" prefHeight="39.0" prefWidth="58.0" styleClass="sous-button" stylesheets="@style.css">
         <graphic>
            <ImageView fitHeight="16" fitWidth="16">
               <image>
                  <Image url="@images/icons8_Person_32px.png" />
               </image>
            </ImageView>
         </graphic>
         <items>
            <MenuItem styleClass="menu-item" text="Option 1" />
            <MenuItem styleClass="menu-item" text="Option 2" />
         </items>
      </MenuButton>
   </children>
</AnchorPane>
