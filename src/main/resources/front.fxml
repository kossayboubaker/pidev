            <MenuItem styleClass="menu-item" text="Option 1" />
            <MenuItem styleClass="menu-item" text="Option 2" />
         </items>
      </MenuButton>
      <MenuButton fx:id="evenementbutton" layoutX="405.0" layoutY="26.0" prefHeight="26.0" prefWidth="110.0" styleClass="sous-button" stylesheets="@style.css" text="Événement">
